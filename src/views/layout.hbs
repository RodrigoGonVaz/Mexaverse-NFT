                            <a href="/nfts/my-nfts"
                                class="text-white hover:bg-pink-500 hover:text-white px-3 py-2 rounded-md block mb-2 text-sm font-black">Mis NFTs</a>

                            <a href="/nfts/create"
                                class="text-white hover:bg-pink-500 hover:text-white px-3 py-2 rounded-md block mb-2 text-sm font-black">Agregar NFTs</a>    
                        </div>
                    </div>

                    {{else}}
                    <div class="hidden sm:block sm:ml-6">
                        <div class="flex space-x-4">
                            <a href="/" style="background-color: #d2458a" class="text-white px-3 py-2 rounded-md block mb-2 text-sm font-black"
                                aria-current="page">HOME</a>

                            <a href="/auth/login"
                                class="text-white bg-opacity-25 hover:bg-pink-500  hover:text-white px-3 py-2 rounded-md block mb-2 text-sm font-black">LOGIN</a>

                            <a href="/auth/signup"
                                class="text-white hover:bg-pink-500 hover:text-white px-3 py-2 rounded-md block mb-2 text-sm font-black">SIGNUP</a>
                        </div>
                    </div>
                    {{/if}}
                </div>
                {{#if currentUser}}
                <div class="absolute inset-y-0 right-0 flex items-center pr-2 sm:static sm:inset-auto sm:ml-6 sm:pr-0">

                    <!-- Profile dropdown -->
                     <form action="/auth/logout" method="POST">
                          <button type="submit" class="text-white hover:bg-pink-500 hover:text-white px-3 py-2 mr-2 rounded-md block text-sm font-black">Cerrar Sesi√≥n</button>
                     </form>                          
                    <div class="ml-3 relative">
                        <div>
                            <a href="/user/{{currentUser.userName}}">
                                <button type="submit"
                                    class="bg-green-800 flex text-sm rounded-full focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-green-800 focus:ring-pink"
                                     aria-expanded="true" aria-haspopup="true">
                                    <span class="sr-only">Open user menu</span>
                                    <img class="h-8 w-8 rounded-full" src="{{currentUser.userImage}}" alt="">
                                </button>
                            </a>
                        </div>
                    </div>
                </div>
                {{/if}}
            </div>
        </div>
      </div>   
